@model StudyProject.Application.Identity.RoleViewModel.RolesToUsersViewModel

@{
    ViewData["Title"] = "AssignRoleToUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Security
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Rule</a></li>
        <li class="active">Assign Role To User</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Assign Role To User</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form method="post" role="form">  
                    <div class="box-body">
                        <div class="form-group">
                            <label>Users</label>
                            <select name="UserSelected" asp-for="UserSelected" asp-items="@Model.AllUsers" class="form-control"> <option>Please select one</option></select>
                        </div>
                        <div class="form-group">
                            <label>Roles</label>
                            <select name="RoleSelected" asp-for="RoleSelected" asp-items="@Model.AllRoles" class="form-control"> <option>Please select one</option></select>
                        </div>
                 
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
