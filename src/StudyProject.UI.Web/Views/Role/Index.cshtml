@model StudyProject.UI.WebCore.Models.RoleViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Security 
        <small>and identity</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Role</a></li>
        <li><a href="#">Index</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Roles</h3>
        </div>
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <tbody>
                    @foreach (var item in Model.AllRoles)
                    {
                        <tr>
                            <td>@item.Value</td>
                        </tr>
                    }
            </table>
        </div>
        <div class="box-header with-border">
            <h3 class="box-title">Claims</h3>
        </div>
        <div class="box-body">
            <table class="table table-bordered table-striped">
                <tbody>
                    @foreach (var item in Model.AllClaims)
                    {
                        <tr>
                            <td>@item.Value</td>
                        </tr>
                    }
            </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <a asp-action="AssignRoleToUser" class="btn btn-default">Assign Role To User</a>
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->

</section>
<!-- /.content -->